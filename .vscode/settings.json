{
    "files.associations": {
        "*.gui_script": "lua",
        "*.script": "lua",
        "*.render_script": "lua",
        "*.fp": "glsl",
        "*.vp": "glsl",
        "stddef.h": "c",
        "corecrt.h": "c",
        "nt_feature_sample.h": "c",
        "nt_engine.h": "c",
        "windows.h": "c",
        "assert.h": "c",
        "glfw3webgpu.h": "c",
        "glfw3.h": "c",
        "xiosbase": "c"
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.intelliSenseMode": "windows-clang-x64",
    "C_Cpp.default.compilerPath": "clang-cl.exe",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/win-debug/compile_commands.json",
    "C_Cpp.codeAnalysis.runAutomatically": true,
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.clangTidy.path": "clang-tidy",
    "C_Cpp.codeAnalysis.clangTidy.configFile": "${workspaceFolder}/.clang-tidy",
    "C_Cpp.codeAnalysis.runOnSave": true,
    "cmake.configureOnOpen": true,
    "cmake.buildTask": true,
    "cSpell.words": [
        "endforeach",
        "failfast"
    ]
}
