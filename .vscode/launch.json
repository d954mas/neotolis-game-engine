{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Sandbox (Windows Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\win-debug\\sandbox\\nt_sandbox.exe",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build win-debug"
        },
        {
            "name": "Run Sandbox (Web Debug via emrun)",
            "type": "cppdbg",
            "request": "launch",
            "program": "emrun",
            "args": [
                "--serve_root",
                "${workspaceFolder}/build/web-debug/sandbox",
                "--no_browser",
                "${workspaceFolder}/build/web-debug/sandbox/nt_sandbox.html"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "preLaunchTask": "Build web-debug"
        }
    ]
}
