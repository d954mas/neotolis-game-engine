{
  "version": 5,
  "cmakeMinimumRequired": { "major": 3, "minor": 27, "patch": 0 },

  "configurePresets": [
    {
      "name": "base-web",
      "hidden": true,
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}/cmake/toolchains/emscripten.cmake",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "base-win",
      "hidden": true,
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}/cmake/toolchains/clang-cl.cmake",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" }
    },

    {
      "name": "web-debug",
      "displayName": "WebAssembly Debug",
      "inherits": "base-web",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "web-release",
      "displayName": "WebAssembly Release",
      "inherits": "base-web",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },

    {
      "name": "win-debug",
      "displayName": "Windows Debug",
      "inherits": "base-win",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "win-release",
      "displayName": "Windows Release",
      "inherits": "base-win",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    }
  ],

  "buildPresets": [
    { "name": "web-debug",   "configurePreset": "web-debug",   "jobs": 8 },
    { "name": "web-release", "configurePreset": "web-release", "jobs": 12 },
    { "name": "win-debug",   "configurePreset": "win-debug",   "jobs": 8 },
    { "name": "win-release", "configurePreset": "win-release", "jobs": 12 }
  ],

  "testPresets": [
    {
      "name": "base-test",
      "hidden": true,
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "ignore", "stopOnFailure": true, "jobs": 8, "timeout": 120 }
    },
    { "name": "web-debug-tests",   "inherits": "base-test", "configurePreset": "web-debug" },
    { "name": "web-release-tests", "inherits": "base-test", "configurePreset": "web-release",
      "execution": { "jobs": 16, "timeout": 60, "noTestsAction": "ignore" } },
    { "name": "win-debug-tests",   "inherits": "base-test", "configurePreset": "win-debug" },
    { "name": "win-release-tests", "inherits": "base-test", "configurePreset": "win-release",
      "execution": { "jobs": 16, "timeout": 60, "noTestsAction": "ignore" } }
  ]
}
